{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}

<div class="container flex-container-tag">

    {% for message in app.flashes('notice') %}
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>{{message}}</p>
    </div>
    {% endfor %}

    <div class="main-question-container">

        <h3 class="h3 mb-3 font-weight-normal">
            Bienvenue {% if app.user.id is defined %} {{ app.user.userName }} {% endif %}!
        </h3>
    
        {% for question in questions %}

        {% include './questions_list.html.twig' %}

        {% endfor %}

        <div class="navigation">
            {{ knp_pagination_render(questions) }}
        </div>

    </div>
    
    {% include './tags_list.html.twig' %}

</div>

{% endblock %}