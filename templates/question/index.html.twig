{% extends 'base.html.twig' %}

{% block body %}

<div class="container">

{% for question in questions %}

    <div class="card bg-light mb-3 question-container">
        <div class="card-header"><a href="{{ path('show_question', {'id':question.id}) }}">{{question.title}}</a></div>
        <div class="card-body">
            <p class="card-text">{{question.body}}</p>
        </div>
    </div>

{% endfor %}

</div>

{% endblock %}
